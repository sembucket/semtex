#
# Make flags for IRIX
#
# $Id$

set opt    = ("-O")
set optcc  = ("-32" $optcc)
set optfc  = ("-32" $optfc)
set ranlib = ":"
set system = ("-lftn" $system)

if ($debug) then
    set opt = "-g"
endif
   
if ($parallel) then
    set cc = "mpicc"
    set fc = "mpif77"
endif

switch ($pl_driver)
    case plot:
	set xlibs = "-lXaw -lXmu -lXt -lSM -lICE -lXext -lX11"
	set pl    = ($pl $xlibs)
	breaksw
    case sm:
	set xlibs = "-lX11"
	set pl    = ($pl $xlibs)
	breaksw
    default:
	breaksw
endsw

