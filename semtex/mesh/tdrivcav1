# Thermal driven cavity problem for buoyancy-driven flow.
# Left edge is hot, right edge is cool, top and bottom are insulated.

<FIELDS>
	u v c p
</FIELDS>

<USER>
	u = 0.0
	v = 0.0
	c = T_MAX-x
	p = 0.0
</USER>

<TOKENS>
	N_TIME	 = 1
	N_P	 = 10
	N_STEP	 = 5000
	IO_FLD   = 1000
	D_T	 = 0.0008
	T_REF    = 0.0
	T_MAX    = 1.0
	T_MIN	 = 0.0
	PRANDTL  = 0.71
	RAYLEIGH = 1.0e4
	GRAVITY  = 1.0
	KINVIS   = PRANDTL
	BETA_T   = RAYLEIGH*PRANDTL
	g_1      =  0.0
	g_2      = -1.0
	g_3      =  0.0
</TOKENS>

<GROUPS NUMBER=3>
	1	h	hot
	2	c	cold
	3	i	insulated
</GROUPS>

<BCS NUMBER=3>
