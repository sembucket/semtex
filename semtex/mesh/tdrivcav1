			<D>	v = 0.0		</D>
			<D>	c = T_MIN	</D>
			<H>	p = 0.0		</H>
	3	i	4
			<D>	u = 0.0		</D>
			<D>	v = 0.0		</D>
			<N>	c = 0.0		</N>
			<H>	p = 0.0		</H>
</BCS>

